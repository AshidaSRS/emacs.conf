using System.Collections;
using System.Collections.Generic;
using System.Linq;
using UnityEngine;

public class Drawrhomboid : MonoBehaviour {

    int heigth = Screen.height;
    int width = Screen.width;

    class Coord {
        private float hsmall;
        private float hbig;
        private float vsmall;
        private float vbig;

        public Coord(float wismall, float wibig, float hesmall, float hebig) {
            hsmall = wismall;
            hbig = wibig;
            vsmall = hesmall;
            vbig = hebig;
        }

        public float getHSmall() {
            return hsmall;
        }

        public float getHBig() {
            return hbig;
        }

        public float getVSmall() {
            return vsmall;
        }

        public float getVBig() {
            return vbig;
        }
    }

    // Use this for initialization
    void Start () {
    }
	
	// Update is called once per frame void Update () {}

    Vector2 [] rhomboid(Coord coordinates) {
    
        Vector2 leftDown = new Vector2(coordinates.getHSmall(), coordinates.getVSmall());
        Vector2 leftUp = new Vector2((coordinates.getHSmall() * 2), coordinates.getVBig());
        Vector2 rightDown = new Vector2(coordinates.getHBig() - (coordinates.getHSmall()), coordinates.getVSmall());
        Vector2 rightUp = new Vector2(coordinates.getHBig(), coordinates.getVBig());

        return new Vector2[] { leftDown, leftUp, rightDown, rightUp };
    }

    Coord getHCoordinates(int height, int width) {
        // 10 % of third down divided into four
        float wirhomSmall = (width / 3) * 10 / 100;
        float wirhomBig = width / 3 - wirhomSmall;
        float herhomSmall = (height / 2) * 10 / 100;
        float herhomBig = height / 2 - herhomSmall;
        return new Coord(wirhomSmall, wirhomBig, herhomSmall, herhomBig);
    }

}
